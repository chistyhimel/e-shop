<%- include("../includes/head.ejs") %>
<link rel="stylesheet" href="/css/forms.css">
</head>
<body>

<%- include("../includes/navigation.ejs") %>


<main class="container">
    
    <div class="form__wrap m-auto mt-5">

        <form action="/admin/add-product" method="post">
            
            <label for="title" class="form-label">Title</label>
            <input type="text" name="title" class="form-control" id="title">

            <label for="imageUrl" class="form-label">Image</label>
            <input type="text" name="imageUrl" class="form-control" id="imageUrl">

            <label for="price" class="form-label">Price</label>
            <input type="number" name="price" step="0.01" class="form-control" id="price">

            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" name="description" id="description" rows="3"></textarea>

            <br>
            
            <button type="submit" class="btn btn-lg btn-dark form-control">Add Product</button>
            
        </form>

    </div>

</main>

<%- include("../includes/end.ejs") %> 